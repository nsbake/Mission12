@{
    ViewData["Title"] = "Tour Info";
}

@model Tour

<h2>Finalize Your Tour</h2>
<p>ENTER YOUR INFO</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Date">Date:</label><input asp-for="Date" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Time">Time:</label><input asp-for="Time" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name">Group Name:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Size">Size of Group:</label><input asp-for="Size" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label><input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number (optional):</label><input asp-for="PhoneNumber" class="form-control" />
    </div>
    <input type="hidden" asp-for="Id" />

    <div class="float-right">
        <button class="btn btn-primary" type="submit">Confirm Apppointment</button>
    </div>

    <br />
    <br />
</form>