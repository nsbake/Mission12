@{
}

@model Tour

<h2>Finalize your tour</h2>
<p>Please enter your information</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Group Info</h4>
    <div class="form-group">
        <label asp-for="Name">Date:</label><input asp-for="Date" class="form-control disabled" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Time:</label><input asp-for="Time" class="form-control disabled" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Group Name:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Size">Size of group:</label><input asp-for="Size" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label><input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number (optional):</label><input asp-for="PhoneNumber" class="form-control" />
    </div>
    <input type="hidden" asp-for="Id" />

    <div class="float-right">
        <input class="btn btn-primary" type="submit" value="Confirm Appointment" />
    </div>
</form>