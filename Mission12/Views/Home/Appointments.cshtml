
@{
    ViewData["Title"] = "Appointments";
}

@model List<Tour>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Name</th>
            <th>Group Size</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th class="text-center">Edit</th>
            <th class="text-center">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Tour t in Model)
        {
            <tr>
                <td>@t.Date</td>
                <td>@t.Time</td>
                <td>@t.Name</td>
                <td>@t.Size</td>
                <td>@t.Email</td>
                <td>@t.PhoneNumber</td>

                <td class="align-middle text-center">
                    <a class="btn btn-secondary btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                </td>

                <td class="text-center">
                    <a class="btn btn-secondary btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>